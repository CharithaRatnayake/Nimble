<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:paddingStart">@dimen/margin_low</item>
        <item name="android:paddingEnd">@dimen/margin_low</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">@dimen/text_size_para</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/color_edit_text_hint</item>
        <item name="android:background">@drawable/bg_edittext_default</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="EditTextEmail" parent="EditText">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditTextName" parent="EditText">
        <item name="android:inputType">textPersonName|textCapWords</item>
    </style>

    <style name="EditTextPassword" parent="EditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_para</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_default</item>
    </style>

    <style name="TextViewHeader" parent="TextViewPara">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/text_size_drawer_title</item>
    </style>

    <style name="TextViewPara">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_para</item>
        <item name="android:textColor">@color/color_text_view</item>
    </style>

    <style name="ViewDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ImageViewProfile">
        <item name="android:layout_width">@dimen/profile_size</item>
        <item name="android:layout_height">@dimen/profile_size</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:contentDescription">@string/nav_header_desc</item>
        <item name="android:src">@drawable/bg_circle_profile</item>
    </style>
</resources>